# A .twmrc file personalized by ogis
RandomPlacement
#NoDefaults
NoGrabServer
OpaqueMove
NoRaiseOnMove
NoRaiseOnResize
#RestartPreviousState
#ClientBorderWidth

NoTitle { "gkrellm" "google-chrome" "chromium" }

DecorateTransients
TitleFont   "-xos4-terminus-medium-r-normal-*-*-120-*-*-c-*-paratype-pt154"
ResizeFont   "-xos4-terminus-medium-r-normal-*-*-120-*-*-c-*-paratype-pt154"
MenuFont    "-xos4-terminus-medium-r-normal-*-*-120-*-*-c-*-paratype-pt154"
IconFont    "-xos4-terminus-medium-r-normal-*-*-120-*-*-c-*-paratype-pt154"
IconManagerFont "-xos4-terminus-medium-r-normal-*-*-120-*-*-c-*-paratype-pt154"
SortIconManager

Color {
   DefaultBackground     "rgb:0/F/0"
   DefaultForeground     "rgb:F/0/0"
   BorderColor           "rgb:C/C/4"
   BorderTileBackground  "rgb:F/F/F" { "xclock" "black" }
   TitleBackground       "rgb:3/3/3"
   TitleForeground       "rgb:8/E/F"
   MenuBackground        "rgb:2/2/2"
   MenuForeground        "rgb:A/8/0"
   MenuBorderColor       "rgb:F/F/0"
   MenuTitleBackground   "rgb:0/0/F"
   MenuTitleForeground   "rgb:F/F/0"
   IconBackground        "rgb:0/0/C"
   IconForeground        "rgb:F/F/0"
   IconBorderColor       "rgb:4/4/4"
   IconManagerBackground "rgb:4/4/A"
   IconManagerForeground "rgb:F/F/6"
}

#
# Define some useful functions for motion-based actions.
#
MoveDelta 3
Function "move-or-lower" { f.move f.deltastop f.lower }
Function "move-or-raise" { f.move f.deltastop f.raise }
Function "move-or-iconify" { f.move f.deltastop f.iconify }

# Set some useful bindings.  Sort of uwm-ish, sort of simple-button-ish
#LeftTitleButton ":iconify" = f.iconify
#RightTitleButton ":resize" = f.resize

Button1 =   : root        : f.menu "MainMenu"
Button3 =   : root        : f.menu "TwmWindows"

Button1 = m : window|icon : f.function "move-or-lower"
Button2 = m : window|icon : f.iconify
Button3 = m : window|icon : f.function "move-or-raise"

Button1 =   : title       : f.function "move-or-raise"
Button2 =   : title       : f.raiselower
Button3 =   : title       : f.menu "simplewinops"

Button1 =   : icon        : f.function "move-or-iconify"
Button2 =   : icon        : f.iconify

Button1 =   : iconmgr     : f.iconify
Button2 =   : iconmgr     : f.iconify

# Some icon manager definitions (optional):
#IconifyByUnmapping { "XTerm" "gvim" "Buddy List" "Geeqie" "Skype" "Inkscape"
#       "Firefox" "qjackctl" "hydrogen" "VirtualBox" "chromium"
#       "GUVCViewer Controls" }
#IconManagerGeometry "=480x30+400+0"
#IconManagers {
# "XTerm" "=240x90+0+0" 1
# "gvim" "=480x120+0+640" 1
#}

#
# And a menus with the usual things
#
menu "winops" {
"Iconify"    f.iconify
"Resize"     f.resize
"Move"     f.move
"Raise"     f.raise
"Lower"     f.lower
"-------------"  f.nop
"Focus"     f.focus
"Unfocus"    f.unfocus
"Show Iconmgr"   f.showiconmgr
"Hide Iconmgr"   f.hideiconmgr
"-------------"  f.nop
"Kill"     f.destroy
"Delete"     f.delete
"Lower"     f.lower
}

menu "simplewinops" {
"Lower"     f.lower
"Close"     f.delete
"Kill"     f.destroy
}

menu "tools" {
"Calculator"   f.exec "exec xcalc -bg gray10 -fg palegoldenrod &"
"Desktop Clock"  f.exec "exec xclock -bg black &"
"Screensaver"   f.exec "exec slock &"
"Run"   f.exec "exec dmenu_run &"
"Restart TWM"   f.restart
"-------------"  f.nop
"Window..."    f.menu "winops"
"============="  f.nop
"Exit TWM"    f.quit
}

menu "MainMenu" {
"ogis"   f.title
"Terminal"    f.exec "exec xterm &"
"Torrent"     f.exec "exec transmission-gtk &"
"Web"     f.exec "exec firefox-esr &"
"-------------"  f.nop
"Close window..."  f.delete
"Tools"     f.menu "tools"
"-------------"  f.nop
}

